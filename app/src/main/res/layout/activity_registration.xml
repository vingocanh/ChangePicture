    <RelativeLayout
            android:id="@+id/rlNgaySinh"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rlShowImage"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_et"
            android:padding="8dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/tvsNgaySinh"
                android:src="@drawable/ic_calendar"
        >
        </ImageView>

        <EditText
                android:id="@+id/etNgaySinh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tvsNgaySinh"
                android:background="@drawable/bg_edit_text_login"
                android:hint="Ngày sinh"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="15dp"
                android:textStyle="italic" />

    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/rlMail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rlShowImage"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_et"
            android:padding="8dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/tvsemail"
                android:src="@drawable/ic_baseline_email_24"
        >
        </ImageView>

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tetMail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tvsemail"
                android:background="@drawable/bg_edit_text_login"
                android:hint="Email"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="15dp"
                android:textStyle="italic" />

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/rlGTinh"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rlShowImage"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_et"
            android:padding="8dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/ivGTinh"
                android:src="@drawable/ic_gender_fluid"
        >
        </ImageView>
        <TextView
                android:id="@+id/tvGTinh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/ivGTinh"
                android:text="Giới tính"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="15dp"
                android:textStyle="italic" />

    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"

                    android:layout_height="wrap_content">

        <RadioGroup
                android:id="@+id/rdiosex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
            <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nam"
                    android:textSize="17sp"
                    android:id="@+id/rdionam"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"
                    android:textSize="17sp"
                    android:id="@+id/rdionu"/>

        </RadioGroup>
    </RelativeLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:paddingTop="40dp">
                <Button
                        android:id="@+id/btnRegister"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Đăng ký"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="#fff"
                        android:background="@drawable/button_login"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/btnRegister"
                        android:layout_margin="10dp"
                        android:gravity="center">

                    <TextView
                            android:id="@+id/tvRegister"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bạn đã có tài khoản?"
                            android:textColor="@color/gray_color_graph"
                            android:textSize="15sp"
                            android:textStyle="bold" />


                        <TextView
                                android:id="@+id/tvLogin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Đăng nhập"
                                android:textColor="@color/pacgroud"
                                android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

</LinearLayout>
