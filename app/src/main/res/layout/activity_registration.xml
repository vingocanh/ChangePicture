    <RelativeLayout
            android:id="@+id/rlHoTen"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/rlShowImage"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_et"
            android:padding="8dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/tvsHoTen"
                android:src="@drawable/icon_user"
        >
        </ImageView>

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tetHoTen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tvsHoTen"
                android:background="@drawable/bg_edit_text_login"
                android:hint="Họ Tên"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="15dp"
                android:textStyle="italic" />

    </RelativeLayout>

    <RelativeLayout
